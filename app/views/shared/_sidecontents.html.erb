<!-- 左コンテンツ -->
  <div class="l-contents">

<!-- ユーザ情報 -->
    <div class="user-info">
      <% if user_signed_in? %>
        <div class="user-info__img"><%= current_user.name[0] %></div>
        <div class="user-info__name"><a><%= current_user.name %></a></div>
      <% else %>
        <div class="user-info__img">未</div>
        <div class="user-info__name"><a>ログインしていません</a></div>
      <% end %>
    </div>
    <div class="user-krown-box">
      <div class="user-krown-box__sum">3つの登録ジャンルがあります</div>
      <div class="user-krown-box__sum">256個の登録ノウハウがあります</div>
    </div>

<!-- ノート情報 -->
    <div class="krown-list">
      <div class="note-info">
        <div class="note-info__icon"><i class="fas fa-book-open"></i></div>
        <div class="note-info__name">知識ジャンル</div>
      </div>
      <div class="note-group1">
        <div class="note-group1__icon"><i class="fas fa-frog"></i></div>
        <div class="note-group1__name">未分類</div>
      </div>

      <% if user_signed_in? %>
        <% @genres.each do | g | %>
          <div class="note-group1">
            <div class="note-group1__icon"><i class="fas fa-arrow-right"></i></div>
            <div class="note-group1__name"><%= g.in_genre %></div>
          </div>
        <% end %>

      <% else %>
        <div class="note-group1">
          <div class="note-group1__icon"><i class="fas fa-dove"></i></div>
          <div class="note-group1__name">ログイン後、ジャンル作成を行ってください</div>
        </div>
      <% end %>

    </div>

<!-- 操作情報 -->
    <div class="operation_area">
      <% if user_signed_in? %>
        <div class="action">
          <div class="action__icon"><i class="fas fa-sign-out-alt"></i></div>
          <div class="action__name dis-link">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </div>
        </div>
        <div class="action">
          <div class="action__icon"><i class="fas fa-university"></i></div>
          <div class="action__name dis-link">
            <%= link_to "ジャンル追加", new_genre_path, method: :get %>
          </div>
        </div>
      <% else %>
        <div class="action">
          <div class="action__icon"><i class="fas fa-sign-in-alt"></i></div>
          <div class="action__name dis-link">
            <%= link_to "ログイン", new_user_session_path %>
          </div>
        </div>
        <div class="action">
          <div class="action__icon"><i class="fas fa-university"></i></div>
          <div class="action__name dis-link">分類はできません</div>
        </div>
        <div class="action">
          <div class="action__icon"><i class="fas fa-user-plus"></i></div>
          <div class="action__name dis-link">
            <%= link_to "アカウント作成", new_user_registration_path %>
          </div>
        </div>
      <% end %>

      <div class="action">
        <div class="action__icon"><i class="fas fa-plus"></i></div>
        <div class="action__name dis-link">
          <%= link_to "メモ追加", new_krown_path, method: :get %>
        </div>
      </div>
      <% if @destroy_flg %>
        <div class="action">
          <div class="action__icon"><i class="fas fa-minus"></i></div>
          <div class="action__name dis-link">
            <%= link_to "メモ削除", krown_path(@knowledge.id), method: :delete %>
          </div>
        </div>
      <% end %>
    </div>

<!-- レフトコンテンツ終了タグ -->
  </div>

  <div class="l-contents-line"></div>
