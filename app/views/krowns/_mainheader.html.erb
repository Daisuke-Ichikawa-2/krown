      <div class="search-box">
        <!-- 検索ボックス定義 -->
        <%= form_tag(wordsearch_krowns_path, method: :get ,remote: :true) do %>
          <div class="input-group">
            <input class="form-control" name="keyword" placeholder="文字を入力して下さい" type="text" value="">
