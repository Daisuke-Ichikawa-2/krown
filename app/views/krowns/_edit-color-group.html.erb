<div class="color-form">

  <!--カラーグループ入力フォーム-->
  <div class="color-form__decoration">
    <i class="fas fa-palette"></i>
  </div>

  <div class="color-form__lavel">マーカー</div>

  <!--   カラーグループ選択フォーム-->
  <div class="color-group">
    <div class="color-group__lavel">group-select</div>
    <%= knowledge_record.select :color_manage_id, color_select_box(@color_select),{},{class: "color-group__text"} %>
    <div class="info_string">個別カラーを作成した場合は、反映されません</div>
  </div>

  <div class="ac-space"></div>

  <!-- カラーグループを使用するかのチェックボックス -->
  <div class="color-individual">
    <div class="color-individual__lavel">color-individual-set</div>
      <!-- 更新時はチェックフラグが予め設定されているため、チェックボックスのコントロールは行わない-->
      <% if color_manage_record.object[:color_flg] == "1" %>
        <%= color_manage_record.check_box :color_flg,class: "color-individual__box" ,id: "color_check",checked: true%>
      <% else %>
        <%= color_manage_record.check_box :color_flg,class: "color-individual__box" ,id: "color_check",checked: false%>
      <% end %>

    <div class="info_string">個別カラーを設定する場合はチェック。※グループカラーは空白にしてください</div>
  </div>

  <!--  カラータイプ、どの設定にするか。-->
  <div class="color-make">
    <div class="color-make__lavel">color_type</div>
    <%= color_manage_record.radio_button :color_type, :graphic ,class:"color-form__button color-form__control" ,disabled: true %>
    <%= color_manage_record.label :color_type, "graphic-color", {class: "color-form__tag"} %>

    <%= color_manage_record.radio_button :color_type, "single",class:"color-form__button color-form__control" ,disabled: true %>
    <%= color_manage_record.label :color_type, "single-color", {class: "color-form__tag"} %>

    <%= color_manage_record.radio_button :color_type, :double,class:"color-form__button color-form__control" ,disabled: true %>
    <%= color_manage_record.label :color_type, "double-color", {class: "color-form__tag"} %>
  </div>

</div>

<!-- カラーグループ入力フォーム -->
<div class="color-select">
  <div class="color-select__lavel1">color(1)</div>
  <%= color_manage_record.select :color_1 ,Settings.color_select[:select_box],{},{class: "color-select__text1 color-form__control",disabled: true} %>
  <div class="color-select__lavel2">color(2)</div>
  <%= color_manage_record.select :color_2 ,Settings.color_select[:select_box],{},{class: "color-select__text2 color-form__control",disabled: true} %>
</div>

<!-- カラーキーワード -->
<div class="color-keyword">
  <div class="color-keyword__lavel1">keyword</div>
  <%= color_manage_record.text_field :group_word ,class: "color-keyword__text1 color-form__control",placeholder:"（3文字まで）",disabled: true %>
  <div class="color-keyword__lavel2">word-color</div>
  <%= color_manage_record.select :word_color ,Settings.color_select[:select_box],{},class: "color-keyword__text2 color-form__control",disabled: true %>
</div>

<!--   カラーグループ選択フォーム-->
<div class="color-make">
  <div class="color-make__lavel">register</div>
  <%= color_manage_record.check_box :group_flg,class: "color-form__box color-form__control" ,checked: false%>
  <div class="info_string">グループ登録の場合はチェック！</div>
</div>


<!--入力制御用jquery-->
<script>
  $('#color_check').change(function() {
      // チェックが入っていたら有効化
      if ( $(this).is(':checked') ){
          // 有効化
          $('.color-form__control').prop('disabled', false);
      } else {
          // 無効化
          $('.color-form__control').prop('disabled', true);
      }
  });
</script>